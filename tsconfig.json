{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2019",
    "lib": ["es2019"],
    "types": ["node"],
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["nodes/**/*"],
  "exclude": ["dist/**/*", "**/*.test.ts", "nodes/**/*.test.ts", "**/*.spec.ts", "nodes/**/*.spec.ts"]
} 